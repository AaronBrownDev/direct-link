root = true

# Defaults
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# C++ files
[*.{cpp,hpp,h,cc,cxx}]
indent_style = space
indent_size = 4

# CMake
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# YAML 
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile 
[Makefile,*.mk]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Protobuf
[*.proto]
indent_style = space
indent_size = 2