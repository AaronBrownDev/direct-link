root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# C++ files
[*.{cpp,hpp}]
indent_style = space
indent_size = 4

# CMake
[CMakeLists.txt]
indent_style = tab
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 2

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Git config files
[.gitattributes,.gitignore]
indent_style = space
indent_size = 2